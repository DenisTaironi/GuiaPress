<%- include('../../partials/header.ejs') %>
<%- include('../../partials/navbar.ejs') %>

<div class="container">
  <hr />  
    <div class="row">
      <div class="col-sm-10">
        <h2>Usuários</h2>
      </div>
      <div class="col-sm-2">
        <a class="btn btn-outline-primary" href="/admin/users/create">+ Novo Usuário</a>
      </div>          
    </div>
  <hr />
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Id</th>
        <th>E-mail</th>        
      </tr>
    </thead>
    <tbody>
      <% users.forEach(user => { %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.email %></td>       
      </tr>
      <% }); %>
    </tbody>
  </table>
</div>

<%- include('../../partials/footer.ejs') %>